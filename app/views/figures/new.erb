<h1>Enter a new figure</h1>

<form method="post" action="/figures">

<label>Figure Name:</label><input type="text" name="figure[name]" id="figure_name">

<h2><label>Choose Titles:</label></h2>
<%Title.all.each do |title|%>
    <label><%= title.name%></label>
    <input type="checkbox" 
           name="figure[title_ids][]" 
           value="<%= title.id%>" 
           id="title_<%= title.id%>">
<%end%>
<h3> Or create a new Title </h3>
<input type="text" name="title[name]" id="new_title" >


<h2><label>Choose Landmarks:</label></h2>
<%Landmark.all.each do |landmark|%>
    <label><%= landmark.name%></label>
    <input type="checkbox" 
           name="figure[landmark_ids][]" 
           value="<%= landmark.id%>" 
           id="landmark_<%= landmark.id%>">
<%end%>
<h3>Or, create a new landmark</h3>
<input type="text" name="landmark[name]" id="new_landmark" >

<br></br>
<input type="submit" name="submit" value="Create New Figure">
</form>