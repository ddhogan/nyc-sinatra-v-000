<h1>Edit the figure <%= @figure.name%></h1>

<form method="post" action="/figures/<%= @figure.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    
    <label for="figure_name">Figure Name:</label>
    <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">

    <h2><label>Choose Titles:</label></h2>
    <%Title.all.each do |title|%>
        <label><%= title.name%></label>
        <input type="checkbox" 
               name="figure[title_ids][]" 
               value="<%= title.id%>" 
               id="title_<%= title.id%>">
    <%end%>
    <h3> Or create a new Title </h3>
    <input type="text" name="title[name]" id="new_title" >

    <h2><label>Choose Landmarks:</label></h2>
    <%Landmark.all.each do |landmark|%>
        <label><%= landmark.name%></label>
        <input type="checkbox" 
               name="figure[landmark_ids][]" 
               value="<%= landmark.id%>" 
               id="landmark_<%= landmark.id%>">
    <%end%>
    <h3>Or, create a new landmark</h3>
    <input type="text" name="landmark[name]" id="new_landmark" >
    
    <br></br>
    <input type="submit" name="submit" value="Edit Figure">
</form>