<h1>Edit the landmark</h1>

<form method="post" action="/landmarks/<%= @landmark.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="landmark_name">Landmark Name:</label>
    <input type="text" name="landmark[name]" value="<%=@landmark.name%>" id="name">

    <label for="landmark_year_completed">Year Completed:</label>
    <input type="text" name="landmark[year_completed]" value="<%=@landmark.year_completed%>" id="year_completed">

    <input type="submit" name="submit" value="Edit Landmark">
</form>